{
    "plugins": ["stylelint-order"],
    "rules": {
        "order/properties-order": [
            {
                "groupName": "Positioning",
                "emptyLineBefore": "never",
                "noEmptyLineBetween": true,
                "properties": ["position", "top", "right", "bottom", "left", "float", "clear"]
            },
            {
                "groupName": "Display & Box Model",
                "emptyLineBefore": "never",
                "noEmptyLineBetween": true,
                "properties": [
                    "display",
                    "box-sizing",
                    "overflow",
                    "grid-template-rows",
                    "grid-template-columns",
                    "grid-template-areas",
                    "grid-auto-rows",
                    "grid-auto-columns",
                    "grid-auto-flow",
                    "flex-direction",
                    "flex-wrap",
                    "flex-flow",
                    "justify-content",
                    "align-items",
                    "align-content",
                    "columns",
                    "column-gap",
                    "column-fill",
                    "column-rule",
                    "column-span",
                    "column-count",
                    "column-width",
                    "list-style",
                    "vertical-align"
                ]
            },
            {
                "groupName": "Dimensions",
                "emptyLineBefore": "never",
                "noEmptyLineBetween": true,
                "properties": ["max-width", "min-width", "width", "max-height", "min-height", "height"]
            },
            {
                "groupName": "Element Spaces",
                "emptyLineBefore": "never",
                "noEmptyLineBetween": true,
                "properties": [
                    "margin",
                    "margin-top",
                    "margin-right",
                    "margin-bottom",
                    "margin-left",
                    "padding",
                    "padding-top",
                    "padding-right",
                    "padding-bottom",
                    "padding-left"
                ]
            },
            {
                "groupName": "Element Box",
                "emptyLineBefore": "never",
                "noEmptyLineBetween": true,
                "properties": [
                    "border",
                    "border-top",
                    "border-right",
                    "border-bottom",
                    "border-left",
                    "border-width",
                    "border-top-width",
                    "border-right-width",
                    "border-bottom-width",
                    "border-left-width",
                    "border-style",
                    "border-top-style",
                    "border-right-style",
                    "border-bottom-style",
                    "border-left-style",
                    "border-color",
                    "border-top-color",
                    "border-right-color",
                    "border-bottom-color",
                    "border-left-color",
                    "border-radius",
                    "border-top-left-radius",
                    "border-top-right-radius",
                    "border-bottom-right-radius",
                    "border-bottom-left-radius",
                    "border-collapse",
                    "border-spacing",
                    "box-shadow"
                ]
            },
            {
                "groupName": "Color",
                "emptyLineBefore": "never",
                "noEmptyLineBetween": true,
                "properties": [
                    "background",
                    "background-color",
                    "background-image",
                    "background-repeat",
                    "background-position",
                    "background-size",
                    "outline",
                    "outline-color",
                    "outline-offset",
                    "outline-style",
                    "outline-width"
                ]
            },
            {
                "groupName": "Text",
                "emptyLineBefore": "never",
                "noEmptyLineBetween": true,
                "properties": [
                    "content",
                    "font",
                    "font-family",
                    "font-size",
                    "font-style",
                    "font-weight",
                    "font-smoothing",
                    "font-variant",
                    "color",
                    "text-align",
                    "text-transform",
                    "text-decoration",
                    "text-overflow",
                    "text-shadow",
                    "text-wrap",
                    "text-rendering",
                    "text-indent",
                    "white-space",
                    "word-spacing",
                    "letter-spacing",
                    "line-height"
                ]
            },
            {
                "groupName": "Transition & Transforms",
                "emptyLineBefore": "never",
                "noEmptyLineBetween": true,
                "properties": [
                    "transform",
                    "transition",
                    "animation",
                    "animation-name",
                    "animation-duration",
                    "animation-timing-function",
                    "animation-delay",
                    "animation-iteration-count",
                    "animation-direction",
                    "animation-fill-mode",
                    "animation-play-state"
                ]
            },
            {
                "groupName": "Others",
                "emptyLineBefore": "never",
                "noEmptyLineBetween": true,
                "properties": [
                    "table-layout",
                    "caption-side",
                    "empty-cells",
                    "quotes",
                    "speak",
                    "visibility",
                    "opacity",
                    "cursor",
                    "z-index"
                ]
            }
        ]
    }
}
